<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/recycle_view_item">

    <TextView
        android:id="@+id/rooms_list_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginStart="@dimen/app_small_margin"
        android:text="@string/def_room_name"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rooms_list_room_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/app_small_margin"
        android:layout_marginBottom="@dimen/app_margin"
        android:text="@string/def_status"
        android:textColor="@color/grey"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rooms_list_room_name"
        app:layout_goneMarginTop="@dimen/app_small_margin" />

</androidx.constraintlayout.widget.ConstraintLayout>
