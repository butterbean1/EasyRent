<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/recycle_view_item">

    <ImageView
        android:id="@+id/ext_file_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_other_file"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/app_margin"
        />

    <TextView
        android:id="@+id/ext_file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ext_file_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/app_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/def_ext_file_name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>