<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="layout_readonly">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="layout_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="large_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="date_time_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:minWidth">@dimen/min_width_datetime_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="floating_btn">
        <item name="android:layout_margin">@dimen/floating_btn_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/white</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="normal_btn">
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/white</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="normal_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normal_separator_height</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
    </style>
    <style name="normal_separator_edit" parent="normal_separator">
        <item name="android:background">@color/grey</item>
    </style>
    <style name="normal_separator_readonly" parent="normal_separator">
        <item name="android:background">@color/white</item>
    </style>
    <style name="recycle_view_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
    </style>
</resources>