<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="ru.butterbean.easyrent.screens.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_roomsListFragment"
            app:destination="@id/roomsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/roomsListFragment"
        android:name="ru.butterbean.easyrent.RoomsListFragment"
        android:label="fragment_rooms_list"
        tools:layout="@layout/fragment_rooms_list" >
        <action
            android:id="@+id/action_roomsListFragment_to_roomChangeFragment"
            app:destination="@id/roomChangeFragment" />
    </fragment>
    <fragment
        android:id="@+id/roomChangeFragment"
        android:name="ru.butterbean.easyrent.ChangeRoomFragment"
        android:label="fragment_room"
        tools:layout="@layout/fragment_room_change" >
        <action
            android:id="@+id/action_roomChangeFragment_to_roomsListFragment"
            app:destination="@id/roomsListFragment" />
        <argument
            android:name="currentRoom"
            app:argType="ru.butterbean.easyrent.models.Room" />
    </fragment>
</navigation>